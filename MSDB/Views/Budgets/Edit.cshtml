@model MSDB.Budget

@{
    ViewData["Title"] = "Edit";
}

<h1>Изменить</h1>

<h4>Бюджет</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="SumBudget" class="control-label">Сумма Бюджета</label>
                <input asp-for="SumBudget" class="form-control" />
                <span asp-validation-for="SumBudget" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Procent" class="control-label">Процент</label>
                <input asp-for="Procent" class="form-control" />
                <span asp-validation-for="Procent" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Bonus" class="control-label">Бонус</label>
                <input asp-for="Bonus" class="form-control" />
                <span asp-validation-for="Bonus" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Назад в список</a>
</div>

