@model MSDB.Models.Salaryes

@{
    ViewData["Title"] = "Create";
}

<h1>Создать</h1>

<h4>Зарплата</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Year" class="control-label">Год</label>
                <select asp-for="Year" class="form-control" asp-items="ViewBag.Yea"></select>
            </div>
            <div class="form-group">
                <label asp-for="Month" class="control-label">Месяц</label>
                <select asp-for="Month" class="form-control" asp-items="ViewBag.Month"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Создать" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Назад в список</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
